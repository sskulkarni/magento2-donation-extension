<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="checkout" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
		<referenceContainer name="cart.summary">
       		<block class="Magento\Framework\View\Element\Template" name="checkout.donation" as="donation" template="Krishaweb_Donation::cart/donation.phtml" after="checkout.cart.shipping" />
       </referenceContainer>
       <referenceBlock name="checkout.cart.totals">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="block-totals" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="donation" xsi:type="array">
                                    <item name="component"  xsi:type="string">Krishaweb_Donation/js/view/checkout/cart/totals/donation</item>
                                    <item name="sortOrder" xsi:type="string">20</item>
                                    <item name="config" xsi:type="array">
                                         <item name="template" xsi:type="string">Krishaweb_Donation/checkout/cart/totals/donation</item>
                                        <item name="title" xsi:type="string" translate="true">Donation</item>
                                    </item>
                                </item>
 
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
	</body>
</page>
    	